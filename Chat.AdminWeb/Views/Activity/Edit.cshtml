            <div class="mainpanel">
                <div class="contentpanel">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4>基本信息</h4>
                        </div>
                        <div class="panel-body">
                            <form action="" class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">活动名称:</label>
                                    <div class="col-sm-6">
                                        <input type="text" placeholder="" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">活动简介:</label>
                                    <div class="col-sm-6">
                                        <textarea name="" rows="5" cols="" class="form-control"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">活动背景图:</label>
                                    <div class="col-sm-6">
                                        <input type="file" id="file1" />
                                        <img src="" id="img1" alt="" style="margin-top: 10px; max-width: 100px; max-height: 400px;" />
                                        <input type="hidden" id="val1" value="" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">活动开始时间:</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="" id="" value="" class="form-control datepicker" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">答题截止时间:</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="" id="" value="" class="form-control datepicker" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">开奖时间:</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="" id="" value="" class="form-control datepicker" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="form-inline">
                                <div class="form-group mt10">
                                    <input name="txtStar" type="text" id="txtStar" placeholder="请输入起始时间" class="form-control datepicker">
                                    <input name="txtEnd" type="text" id="txtEnd" placeholder="请输入结束时间" class="form-control datepicker">
                                </div>
                                <div class="form-group mt10">
                                    <input name="" type="text" placeholder="请输入试卷题目" class="form-control">
                                </div>
                                <div class="form-group mt10">
                                    <a class="btn btn-primary mr5" iconcls="icon-search" href="javascript:;"><i class="fa fa-search"></i> 搜 索 </a>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-bordered table-primary mb30">
                                <thead>
                                    <tr>
                                        <th style="min-width: 20px;">选择</th>
                                        <th style="min-width: 80px;">编号</th>
                                        <th style="min-width: 80px;">试卷标题</th>
                                        <th style="min-width: 80px;">考题数</th>
                                        <th style="min-width: 40px;">创建时间</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td data-attr="选择"><input type="radio" name="chioce" id="" value="" class="checkTm" /></td>
                                        <td data-attr="编号">20171103</td>
                                        <td data-attr="试卷标题">环保从我做起</td>
                                        <td data-attr="考题数">20</td>
                                        <td data-attr="创建时间">2017/04/30 16:10</td>
                                    </tr>
                                    <tr class="check">
                                        <td data-attr="选择"><input type="radio" name="chioce" id="" value="" class="checkTm" checked="checked" /></td>
                                        <td data-attr="编号">20171103</td>
                                        <td data-attr="试卷标题">环保从我做起</td>
                                        <td data-attr="考题数">20</td>
                                        <td data-attr="创建时间">2017/04/30 16:10</td>
                                    </tr>
                                    <tr>
                                        <td data-attr="选择"><input type="radio" name="chioce" id="" value="" class="checkTm" /></td>
                                        <td data-attr="编号">20171103</td>
                                        <td data-attr="试卷标题">环保从我做起</td>
