<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>广西环保</title>
    <link href="~/Css/style.default.css" rel="stylesheet">
</head>

<body class="signin">
    <section>
        <div class="panel panel-signin">
            <div class="panel-body">

                <h4 class="text-center mb5"><img src="~/Picture/logo-primary.png" /></h4>
                <p class="text-center">后台管理系统</p>

                <div class="mb30"></div>

                <form action="signin.html" method="post">
                    <div class="input-group mb15">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="text" class="form-control" id="name" placeholder="用户名">
                    </div><!-- input-group -->
                    <div class="input-group mb15">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" class="form-control" id="password" placeholder="密码">
                    </div><!-- input-group -->

                    <div class="clearfix">
                        <div class="pull-left">
                            <div class="ckbox ckbox-primary mt10">
                                <input type="checkbox" id="rememberMe" value="1">
                                <label for="rememberMe">记住密码</label>
                            </div>
                        </div>
                        <div class="pull-right">
                            <button type="button" id="btnLogin" class="btn btn-success">登录 <i class="fa fa-angle-right ml5"></i></button>
                        </div>
                    </div>
                </form>

            </div><!-- panel-body -->

        </div><!-- panel -->

    </section>


    <script src="~/Scripts/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr.min.js"></script>
    <script src="~/Scripts/pace.min.js"></script>
    <script src="~/Scripts/retina.min.js"></script>
    <script src="~/Scripts/jquery.cookies.js"></script>
    <script src="~/Scripts/custom.js"></script>

    <script type="text/javascript">
        $(function () {
            $("#btnLogin").click(function () {
                var name = $("#name").val();
                var password = $("#password").val();
                $.ajax({
                    url: "/home/login", type: "post", data: { name: name, password: password },
                    success: function (result) {
                        if(result.status=="error")
                        {
                            alert(result.errorMsg);
                        }
                        else if(result.status=="redirect")
                        {
                            window.location.href = result.data;
                        }
                        else
                        {
                            alert("未知错误！");
                        }
                    },
                    error: function () { alert("网络错误！"); }
                });
            });
        });
    </script>
</body>
</html>
